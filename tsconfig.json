{
    "compilerOptions": {
        "lib": [
            "es5",
            "es6",
            "es2017",
            "es2020",
            "es2022",
            "dom"
        ],
        "target": "es2022",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": "./",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "strict": false,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "downlevelIteration": true,
        "skipLibCheck": true,
        "types": [
            "node"
        ],
        "typeRoots": [
            "./src/@types/*",
            "./node_modules/@types"
        ]
    },
    "ts-node": {
        "files": true
    },
    "include": [
        "src/**/*",
        "node_modules/@types/mocha"
    ]
}